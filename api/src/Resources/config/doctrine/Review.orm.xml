<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\Review" table="app_reviews">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="author" length="255"/>
        <field name="review" type="text"/>
        <field name="rate" type="integer"/>
        <field name="createdAt" type="datetime"/>
        <many-to-one field="book" target-entity="App\Entity\Book" inversed-by="reviews">
            <join-columns>
                <join-column on-delete="CASCADE" nullable="false" />
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
